{
  "mcpServers": {
    "python-package-manager": {
      "command": "python",
      "args": [
        "-m",
        "python_package_mcp_server.cli",
        "stdio"
      ],
      "env": {
        "MCP_PROJECT_ROOT": ".",
        "MCP_LOG_LEVEL": "INFO",
        "MCP_LOG_FORMAT": "json"
      }
    },
    "python-package-manager-auth": {
      "command": "python",
      "args": [
        "-m",
        "python_package_mcp_server.cli",
        "stdio"
      ],
      "env": {
        "MCP_PROJECT_ROOT": ".",
        "MCP_ENABLE_AUTH": "true",
        "MCP_API_KEY": "your-api-key-here",
        "MCP_LOG_LEVEL": "INFO",
        "MCP_LOG_FORMAT": "json"
      }
    },
    "python-package-manager-user-auth": {
      "command": "python",
      "args": [
        "-m",
        "python_package_mcp_server.cli",
        "stdio"
      ],
      "env": {
        "MCP_PROJECT_ROOT": ".",
        "MCP_ENABLE_AUTH": "true",
        "MCP_ENABLE_USER_AUTH": "true",
        "MCP_USERS_FILE": "~/.mcp_server/users.json",
        "MCP_API_KEY": "your-admin-api-key-here",
        "MCP_LOG_LEVEL": "INFO",
        "MCP_LOG_FORMAT": "json"
      }
    },
    "python-package-manager-http": {
      "command": "python",
      "args": [
        "-m",
        "python_package_mcp_server.cli",
        "http"
      ],
      "env": {
        "MCP_PROJECT_ROOT": ".",
        "MCP_HOST": "localhost",
        "MCP_PORT": "8000",
        "MCP_API_KEY": "your-api-key-here",
        "MCP_ENABLE_AUTH": "true",
        "MCP_LOG_LEVEL": "INFO",
        "MCP_LOG_FORMAT": "json"
      }
    }
  }
}
